---
import Card from './Card.astro';
import { Icon } from 'astro-icon';

interface Props {
	isOpen: boolean;
}

const { isOpen } = Astro.props;
---

<Card bgColor="primary" class="accordion">
	<h3 data-state={isOpen ? 'open' : 'closed'} data-orientation="vertical">
		<button class="accordion__control">
			<div class="accordion__label">
				<span class="accordion__label__number">01</span>
				<span class="accordion__label__title">Consultation</span>
			</div>
			<Icon name={isOpen ? 'fa-solid:minus' : 'fa-solid:plus'} class="accordion__icon" />
		</button>
	</h3>
	<div data-state={isOpen ? 'open' : 'closed'} class="accordion__content">Lorem Ipsum</div>
</Card>

<style>
	.accordion {
		width: 100%;
		padding: 30px;
	}

	.accordion h3 {
		width: 100%;
		height: 100%;
	}

	.accordion__control {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: space-between;
		background: none;
		border: none;
		flex: 1 1 auto;
		border-radius: 45px;
		cursor: pointer;
		font-family: var(--font-family), sans-serif;
	}

	.accordion__label {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 33px;
	}

	.accordion__label__number {
		font-size: 1.875rem;
	}

	.accordion__label__title {
		font-size: 1.125rem;
	}

	.accordion__icon {
		padding: 5px;
		width: 30px;
		height: 30px;
		border: 1px solid var(--secondary);
		flex-shrink: 0;
		background-color: var(--background);
		border-radius: 50%;
	}

	.accordion__content {
		border-top: 1px solid var(--secondary);
		margin: 30px 0;
		padding: 30px 0;
		font-size: 1.125rem;
	}

	.accordion__content[data-state='open'] {
		display: block;
	}

	.accordion__content[data-state='closed'] {
		display: none;
	}

	@media (min-width: 768px) {
		.accordion {
			padding: 30px 45px;
		}

		.accordion__label {
			gap: 25px;
		}

		.accordion__label__number {
			font-size: 3.35rem;
		}

		.accordion__label__title {
			font-size: 1.5rem;
		}

		.accordion__icon {
			width: 42px;
			height: 42px;
		}
	}

	@media (min-width: 1024px) {
		.accordion {
			padding: 41px 60px;
		}

		.accordion__label {
			gap: 25px;
		}

		.accordion__label__number {
			font-size: 3.75rem;
		}

		.accordion__label__title {
			font-size: 1.875rem;
		}

		.accordion__icon {
			width: 58px;
			height: 58px;
		}
	}
</style>
