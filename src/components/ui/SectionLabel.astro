---
import type { Section } from '@/interfaces/Section';

interface Props extends Omit<Section, 'id'> {}

const { title, description } = Astro.props;
---

<div>
	<h2 class="heading heading-accent">
		{title}
	</h2>
	<p>
		{description}
	</p>
</div>

<style>
	div {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		margin-bottom: 4rem;
	}

	p {
		text-align: center;
	}

	@media (min-width: 768px) {
		p {
			text-align: left;
		}
	}

	@media (min-width: 1024px) {
		div {
			flex-direction: row;
			gap: 4rem;
		}

		p {
			max-width: 580px;
			flex-shrink: 0;
		}
	}
</style>
