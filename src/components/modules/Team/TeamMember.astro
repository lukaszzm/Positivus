---
import Icon from 'astro-icon';
import { Image } from 'astro:assets';
import type { TeamMember } from '@/interfaces/TeamMember';

interface Props extends TeamMember {}

const { src, name, position, description, linkedinProfile } = Astro.props;
---

<div class="team-member card card-background">
	<div class="team-member__overview">
		<Image src={src} width="105" height="105" alt="Image of John Smith" class="team-member__overview__image" />
		<div class="team-member__overview__label">
			<h3>{name}</h3>
			<h4>{position}</h4>
		</div>

		<a href={linkedinProfile} class="team-member__overview__link" aria-label={`Link to ${name} linkedin profile`}>
			<Icon name="brandico:linkedin" />
		</a>
	</div>

	<div class="team-member__description">
		<p>{description}</p>
	</div>
</div>

<style>
	.team-member {
		padding: 4rem 3.5rem;
	}

	.team-member__description {
		margin-top: 2.8rem;
		padding-top: 2.8rem;
		border-top: 1px solid var(--foreground);
	}

	.team-member__overview {
		display: flex;
		position: relative;
		padding-right: 3.5rem;
		gap: 2rem;
	}

	.team-member__overview__image {
		border-radius: 2.5rem;
		border: 1px solid var(--foreground);
		box-shadow: 3px 3px 0 0 var(--foreground);
	}

	.team-member__overview__link {
		position: absolute;
		width: 3.5rem;
		height: 3.5rem;
		padding: 0.8rem;
		top: 0;
		right: 0;
		border-radius: 50%;
		color: var(--accent);
		background-color: var(--foreground);
	}

	.team-member__overview__label {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
	}

	.team-member__overview__label h3 {
		font-size: 2.4rem;
	}

	.team-member__overview__label h4 {
		font-size: 1.6rem;
	}
</style>
