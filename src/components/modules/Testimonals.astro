---
import SectionLabel from '@/components/elements/SectionLabel.astro';
import { Carousel } from '@react/Carousel';
import { testimonals } from '@/data/testimonals';
import { getSectionById } from '@/utils/getSectionById';

const { id, title, description } = getSectionById('testimonals');

---

<section id={id}>
	<SectionLabel title={title} description={description}  />

	<div class="testimonals__container card card-foreground">
		<Carousel items={testimonals} client:load />
	</div>
</section>

<style>
	.testimonals__container {
		color: white;
		padding: 84px 0 60px 0;
	}
</style>
