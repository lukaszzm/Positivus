---
import { Icon } from 'astro-icon';
import Button from '../elements/Button.astro';
import { HamburgerMenu } from '../react-components/HamburgerMenu';

const links: Array<{ label: string; href: string }> = [
	{
		label: 'About us',
		href: '/about-us',
	},
	{
		label: 'Services',
		href: '/#services',
	},
	{
		label: 'Use cases',
		href: '/#use-cases',
	},
	{
		label: 'Blog',
		href: '/blog',
	},
];
---

<nav>
	<a href="/" id="logo">
		<Icon name="logo" />
	</a>

	<div id="desktop-menu">
		{
			links.map(({ label, href }) => (
				<a href={href} class="link-highlight">
					{label}
				</a>
			))
		}
		<a href="/#contact">
			<Button variant="ghost">Request a quote</Button>
		</a>
	</div>

	<HamburgerMenu links={links} client:load />
</nav>

<style>
	nav {
		display: flex;
		padding: 25px;
		justify-content: space-between;
		align-items: center;
	}

	#logo {
		width: 150px;
	}

	#desktop-menu {
		display: none;
	}

	@media (min-width: 1024px) {
		#desktop-menu {
			display: flex;
			gap: 40px;
			align-items: center;
		}

		#desktop-menu a {
			font-size: 2rem;
		}

		nav {
			margin-top: 45px;
			padding: 0 50px;
		}
	}

	@media (min-width: 1280px) {
		nav {
			padding: 0 100px;
			max-width: 1440px;
			margin: 0 auto;
			margin-top: 60px;
		}
	}
</style>
