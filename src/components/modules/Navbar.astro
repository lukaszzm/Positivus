---
import { Icon } from 'astro-icon';
import Button from '@/components/elements/Button.astro';
import { HamburgerMenu } from '@react/HamburgerMenu';
import { routes } from '@/data/routes';
---

<nav>
	<a href="/" id="logo" aria-label="Link to main page">
		<Icon name="logo" />
	</a>

	<div id="desktop-menu">
		{
			routes.map(({ label, href }) => (
				<a href={href} class="link-highlight">
					{label}
				</a>
			))
		}
		<a href="/#contact">
			<Button variant="ghost">Request a quote</Button>
		</a>
	</div>

	<HamburgerMenu links={routes} client:load />
</nav>

<style>
	nav {
		display: flex;
		padding: 25px;
		justify-content: space-between;
		align-items: center;
	}

	#logo {
		width: 150px;
	}

	#desktop-menu {
		display: none;
	}

	@media (min-width: 1024px) {
		#desktop-menu {
			display: flex;
			gap: 40px;
			align-items: center;
		}

		#desktop-menu a {
			font-size: 2rem;
		}

		nav {
			margin-top: 45px;
			padding: 0 50px;
		}
	}

	@media (min-width: 1280px) {
		nav {
			padding: 0 100px;
			max-width: 1440px;
			margin: 0 auto;
			margin-top: 60px;
		}
	}
</style>
