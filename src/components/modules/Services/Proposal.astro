---
import Button from '../../elements/Button.astro';
import Icon from 'astro-icon';
---

<div class="proposal card card-muted">
	<div class="proposal__text">
		<h3>Let's make things happen</h3>
		<p>Contact us today to learn more about how our digital marketing services can help your business grow and succeed online.</p>
		<Button>Get your proposal</Button>
	</div>
	<Icon name="freeProposal" class="proposal__icon" />
</div>

<style>
	.proposal {
		border: none;
		box-shadow: none;
		margin-top: 70px;
	}

	.proposal__text {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	.proposal__icon {
		display: none;
	}

	@media (min-width: 1024px) {
		.proposal {
			gap: 50px;
			padding: 0;
			display: flex;
			justify-content: space-between;
			align-items: center;
			gap: 50px;
			flex-shrink: 0;
		}

		.proposal__text {
			width: 50%;
			padding: 50px;
		}

		.proposal__icon {
			display: block;
			margin-left: auto;
			width: 50%;
			max-width: 440px;
		}
	}
</style>
