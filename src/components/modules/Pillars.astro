---
import SectionLabel from '@/components/elements/SectionLabel.astro';
import Pillar from './Pillars/Pillar.astro';
import { pillars } from '@/data/pillars';
import { getSectionById } from '@/utils/getSectionById';

const { id, title, description } = getSectionById("pillars");
---

<section id={id}>
	<SectionLabel
		title={title}
		description={description}
	/>

	{pillars.map((pillar, index) => <Pillar reverse={index % 2 === 1} {...pillar} />)}
</section>
