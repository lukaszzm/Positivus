---
import { getSectionById } from "@/utils/getSectionById";

const { id, title, description } = getSectionById("mainAbout");
---

<section id={id}>
	<h1>{title}</h1>
	<div>
		<p>
			<span>Positivus</span>{description}
		</p>
	</div>
</section>

<style>
	section {
		display: flex;
		flex-direction: column;
		margin: 2rem auto;
		padding: 0 1rem;
		text-align: center;
		gap: 1.5rem;
	}

	h1 {
		font-size: 9rem;
	}

	div {
		display: flex;
		flex-direction: column;
		gap: 0.6rem;
	}

	p {
		font-size: 2.2rem;
		line-height: 1.5;
		max-width: 1050px;
		padding: 0 3rem;
		margin: 0 auto;
	}

	span {
		font-weight: 500;
		background-color: var(--accent);
		padding: 3px;
		border-radius: 3px;
	}
</style>
