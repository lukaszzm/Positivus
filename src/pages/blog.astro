---
import Layout from '@/layouts/Layout.astro';
import { Icon } from 'astro-icon';

const noPosts = "Sorry, we don't have any blog posts yet.";
---

<Layout title="Blog - Positivus">
	<section id="blog">
		<Icon name="no-blog-posts" class="blog__icon" />
		<p>{noPosts}</p>
	</section>
</Layout>

<style>
	#blog {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 9.5rem;
		padding: 2rem;
	}

	#blog p {
		font-size: 2.1rem;
		text-align: center;
	}

	.blog__icon {
		max-width: 640px;
	}
</style>
