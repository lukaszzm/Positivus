---
import '@fontsource-variable/space-grotesk';
import Navbar from '../components/modules/Navbar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Positivus - Navigating the digital landscape for success" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #B9FF66;
		--secondary: #191A23;
		--muted: #F3F3F3;
		--background: #fff;
	}

	* {
  		box-sizing: border-box;
	}

	html {
		font-family: 'Space Grotesk Variable', sans-serif;
		background: var(--background);
		color: var(--secondary);
	}

	h1 {
		font-size: 60px;
		font-weight: 500;
	}

	h2 {
		font-size: 40px;
		font-weight: 500;
	}

	h3 {
		font-size: 30px;
		font-weight: 500;
	}

	h4 {
		font-size: 20px;
		font-weight: 500;
	}

	h5 {
		font-size: 18px;
		font-weight: 400;
	}

	@media only screen and (max-width: 768px) {
		h1 {
			font-size: 43px;
		}

		h2 {
			font-size: 36px;
		}
		
		h3 {
			font-size: 26px;
		}

		h4 {
			font-size: 18px;
		}

		h5 {
			font-size: 16px;
		}
	}
</style>
