---
import '@fontsource-variable/space-grotesk';
import Navbar from '@/components/modules/Navbar/Navbar.astro';
import Footer from '@/components/modules/Footer/Footer.astro';
import GlobalStyles from '@/styles/GlobalStyles.astro';
import ButtonStyles from '@/styles/ButtonStyles.astro';
import CardStyles from '@/styles/CardStyles.astro';
import HeadingStyles from '@/styles/HeadingStyles.astro';
import InputStyles from '@/styles/InputStyles.astro';
import LinkStyles from '@/styles/LinkStyles.astro';
import TypographyStyles from '@/styles/TypographyStyles.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Positivus - Navigating the digital landscape for success" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>

	<GlobalStyles />
	<ButtonStyles />
	<CardStyles />
	<HeadingStyles />
	<InputStyles />
	<LinkStyles />
	<TypographyStyles />
</html>
