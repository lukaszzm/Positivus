---
import '@fontsource-variable/space-grotesk';
import Navbar from '../components/modules/Navbar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Positivus - Navigating the digital landscape for success" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #b9ff66;
		--secondary: #191a23;
		--muted: #f3f3f3;
		--background: #fff;
	}

	* {
		box-sizing: border-box;
	}

	html {
		font-family: 'Space Grotesk Variable', sans-serif;
		font-size: 16px;
		background: var(--background);
		color: var(--secondary);
		scroll-behavior: smooth;
	}

	section {
		width: 100%;
		padding: 0 100px;
		margin: 50px 0;
	}

	h1 {
		font-size: 3rem;
		font-weight: 500;
	}

	h2 {
		font-size: 2.25rem;
		font-weight: 500;
	}

	h3 {
		font-size: 1.6rem;
		font-weight: 500;
	}

	h4 {
		font-size: 1.1rem;
		font-weight: 500;
	}

	p {
		font-size: 1rem;
		font-weight: 400;
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 3.75rem;
			font-weight: 500;
		}

		h2 {
			font-size: 2.5rem;
			font-weight: 500;
		}

		h3 {
			font-size: 1.875rem;
			font-weight: 500;
		}

		h4 {
			font-size: 1.25rem;
			font-weight: 500;
		}

		p {
			font-size: 1.125rem;
			font-weight: 400;
		}
	}
</style>
